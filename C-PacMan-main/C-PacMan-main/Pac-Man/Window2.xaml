                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
        </Grid>

        <Label x:Name="Punkte" Background="DimGray" Foreground="White" FontSize="30" FontFamily="Comic Sans MS" FontStyle="Italic" FontWeight="Bold" Canvas.Left="0" Canvas.Top="320" Height="96" Width="160"></Label>
        <Label x:Name="Leben" Background="DimGray" Foreground="White" FontSize="30" FontFamily="Comic Sans MS" FontStyle="Italic" FontWeight="Bold" Canvas.Left="736" Canvas.Top="320" Height="96" Width="160"></Label>

        <Rectangle x:Name="spieler" Fill="Yellow" Width="32" Height="32" Canvas.Left="192" Canvas.Top="160" RenderTransformOrigin="0.5,0.5">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="45"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>

        <Rectangle x:Name="ghost1" Fill="Red"  Width="28" Height="28" Canvas.Left="343" Canvas.Top="229"></Rectangle>
        <Rectangle x:Name="ghost2" Fill="Lime" Width="28" Height="28" Canvas.Left="343" Canvas.Top="270"></Rectangle>
        <Rectangle x:Name="ghost3" Fill="Orange" Width="28" Height="28" Canvas.Left="343" Canvas.Top="313"></Rectangle>

        <Rectangle x:Name="kirsche" Fill="Red" Width="10" Height="10" Canvas.Left="570" Canvas.Top="364"></Rectangle>
        <Rectangle x:Name="punktg" Fill="Indigo" Width="10" Height="10" Canvas.Left="522" Canvas.Top="360"></Rectangle>
