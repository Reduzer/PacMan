        xmlns:local="clr-namespace:Pac_Man"
        mc:Ignorable="d"
        Title="Pac-Man" Height="992" Width="896">
    <Canvas x:Name="Spielfeld" Background="Black" Focusable="true" KeyDown="drehung">

        <Grid Height="992" Width="896" Name="Waende" >
